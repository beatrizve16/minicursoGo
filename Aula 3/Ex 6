package main

import "fmt"

func main() {
   
var num int
var max int

for {
fmt.Print("Digite um número inteiro: ")
fmt.Scanln(&num)

switch {
case num == 0:
fmt.Println("Leitura interrompida ")
        return
case num > max:
  max = num }
 
    fmt.Println("O maior número digitado é:", max)

}
    }
